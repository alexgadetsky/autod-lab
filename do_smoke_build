		stage('Do NAS Smoke') {
			steps {
				build job: 'AutoD-DeployVMs', wait: true, parameters: [[string(name: 'VM_FILTER', value: 'firecrest,Ubuntu18')], [string(name: 'VMC', value: '1')], [string(name: 'Prefix', value: 'vmnas')], [string(name:'ClusterVar', value: 'autod')]]
			}
		}
